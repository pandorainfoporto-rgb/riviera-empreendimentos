import { createClientFromRequest } from 'npm:@base44/sdk@0.7.1';

Deno.serve(async (req) => {
    try {
        const base44 = createClientFromRequest(req);
        const { senhaAtual, novaSenha } = await req.json();

        // Verificar autenticação
        const user = await base44.auth.me();
        if (!user) {
            return Response.json({ 
                success: false, 
                error: 'Não autorizado' 
            }, { status: 401 });
        }

        if (!senhaAtual || !novaSenha) {
            return Response.json({ 
                success: false, 
                error: 'Senha atual e nova senha são obrigatórias' 
            }, { status: 400 });
        }

        if (novaSenha.length < 6) {
            return Response.json({ 
                success: false, 
                error: 'A nova senha deve ter pelo menos 6 caracteres' 
            }, { status: 400 });
        }

        // Verificar senha atual tentando fazer login
        const { error: signInError } = await base44.asServiceRole.client.auth.signInWithPassword({
            email: user.email,
            password: senhaAtual
        });

        if (signInError) {
            return Response.json({ 
                success: false, 
                error: 'Senha atual incorreta' 
            }, { status: 400 });
        }

        // Atualizar senha usando admin API
        const { error: updateError } = await base44.asServiceRole.client.auth.admin.updateUserById(
            user.id,
            { password: novaSenha }
        );

        if (updateError) {
            console.error('Erro ao atualizar senha:', updateError);
            return Response.json({ 
                success: false, 
                error: 'Erro ao atualizar senha. Tente novamente.' 
            }, { status: 500 });
        }

        // Enviar email de confirmação
        try {
            await base44.asServiceRole.integrations.Core.SendEmail({
                from_name: 'Riviera Incorporadora',
                to: user.email,
                subject: 'Senha Alterada com Sucesso',
                body: `
Olá, ${user.full_name}!

Sua senha foi alterada com sucesso em ${new Date().toLocaleString('pt-BR')}.

✅ Sua conta está segura.

⚠️ Não reconhece esta alteração?
Se você não solicitou esta mudança, entre em contato imediatamente com nosso suporte.

Atenciosamente,
Equipe Riviera Incorporadora
                `.trim()
            });
        } catch (emailError) {
            console.error('Erro ao enviar email de confirmação:', emailError);
        }

        return Response.json({ 
            success: true, 
            message: 'Senha alterada com sucesso!' 
        });

    } catch (error) {
        console.error('Erro ao alterar senha:', error);
        return Response.json({ 
            success: false, 
            error: 'Erro ao processar solicitação. Tente novamente.' 
        }, { status: 500 });
    }
});